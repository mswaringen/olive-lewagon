<h1>Make a Donation to <%= @transaction.portfolio.ngo.name %></h1>
<%= form_tag payments_path do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@transaction.amount) %></span>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Donation"
    data-email="<%= current_user.email %>"
    data-description="Donation to <%= @transaction.portfolio.ngo.name %>"
    data-amount="<%= @transaction.amount_cents %>"
    data-currency="<%= @transaction.amount.currency %>"></script>
<% end %>